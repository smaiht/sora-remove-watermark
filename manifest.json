{
  "manifest_version": 3,
  "name": "Sora Remove Watermark",
  "version": "1.1",
  "description": "Download Sora videos without watermark",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "https://sora.chatgpt.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Download Sora Video",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://sora.chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://sora.chatgpt.com/*"]
    }
  ]
}
